<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    android:orientation="vertical">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lobstertwo_bold"
        android:text="Search for a lake"
        android:layout_gravity="center"
        android:textColor="#3F51B5"
        android:textSize="46sp"
        />


    <EditText
        android:id="@+id/inputField"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Worthersee"
        android:hint="name of the lake"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/buttonStyle"
        android:text="Find" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="60dp"
        tools:context=".ClosestPlaces"
        tools:layout="@layout/support_simple_spinner_dropdown_item" />

    <TextView
        android:id="@+id/temperature"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/acme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature: " />
    <TextView
        android:id="@+id/locality"
        android:layout_marginTop="5dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/acme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locality: " />
</LinearLayout>
